            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/6.5/krunner-6.5.0.tar.xz",
                    "sha256": "5674afef23fe6747aaa8b06c405a53a4e40f77ba24535d2080d512602b036030",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8762,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/frameworks/$major.$minor/krunner-$version.tar.xz"
                    }
                }
            ]

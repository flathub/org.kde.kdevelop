                        "stable-only": true,
                        "url-template": "https://github.com/lm-sensors/lm-sensors/archive/V${version}/lm-sensors-${version}.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "libpcap",
            "cleanup": [
                "/include",
                "/share",
                "/lib/pkgconfig"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.tcpdump.org/release/libpcap-1.10.5.tar.gz",
